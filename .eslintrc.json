{
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "plugin:vue/recommended", "plugin:vue/strongly-recommended"],
  "env": {
    "node": true
  },
  "rules": {
    "quotes": ["error", "single"],
    "indent": ["error", "tab", { "SwitchCase": 1 }],
    "semi": ["error", "never"],
    "key-spacing": [
      "error",
      {
        "mode": "strict",
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "vue/html-indent": [
      "error",
      "tab",
      {
        "attribute": 1,
        "closeBracket": 0,
        "alignAttributesVertically": true,
        "ignores": []
      }
    ]
  }
}
